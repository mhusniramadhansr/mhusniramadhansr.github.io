---
const { title, description, image, link } = Astro.props;
---

<div
  class="max-w-sm bg-gray-200 text-gray-900 dark:bg-gray-900 dark:text-white rounded-xl overflow-hidden shadow-md"
>
  <a href={link}>
    <!-- Gambar preview -->
    <img alt="preview" src={image} alt="Preview" class="w-full" />

    <!-- Konten Card -->
    <div class="p-5">
      <h2 class="text-2xl font-bold mb-2">{title}</h2>
      <p class="text-gray-900 dark:text-gray-300">{description}</p>
    </div>
  </a>
</div>
